{
  "schedule": {
    "frequency": "daily",
    "time": "02:00",
    "timezone": "UTC"
  },
  "training": {
    "auto_retrain_threshold": 0.05,
    "max_training_time": 3600,
    "batch_size": 32,
    "learning_rate": 0.001,
    "epochs": 100,
    "early_stopping_patience": 10,
    "validation_split": 0.2
  },
  "data": {
    "min_training_samples": 1000,
    "max_training_samples": 10000,
    "data_refresh_days": 7,
    "augmentation_enabled": true
  },
  "deployment": {
    "auto_deploy": true,
    "rollback_enabled": true,
    "performance_threshold": 0.8,
    "backup_models": 5
  },
  "monitoring": {
    "performance_check_interval": 300,
    "alert_thresholds": {
      "accuracy_drop": 0.05,
      "speed_drop": 0.2,
      "memory_usage": 0.85
    }
  }
}